<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<!-- Flash Notice -->
	<p class="notice"><%= notice%></p>
	<p class="alert"><%= alert%></p>
	<!-- Navigation Bar -->
	<% unless flash.empty? %>
	<div class="container">
	<%flash.each do |key, value| %>
		<% value %>
		<% end %>
		<% end %>
	</div>
	  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
	  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>
	  <a class="navbar-brand" href="<%= root_path %>">Blog</a>
	  
	  <div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav">
		  <li class="nav-item">
			<a class="nav-link" href="<%= new_user_registration_path %>">Sign Up</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="new_user_session_path">Log In</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="destroy_user_session_path">Log Out</a>
		  </li>
		</ul>
		<form class="form-inline my-2 my-lg0">
			<%= form_tag(articles_path, :method => "get", id: "search-form") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Search Articles"%>
			<%= submit_tag "Search" %>
			<% end %>
		</form>
	  </div>
	</nav>
	<!-- Yield to Controller -->
	<div class="container">
		<%= yield %>
	</div>
  </body>
</html>
